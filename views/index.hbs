<div class="container-fluid">
  <div class="jumbotron mt-2 vh-100 shadow-lg very-rounded py-4">
    <div class="h2 font-weight-bold">
      Global Chat
    </div>
    <hr />
    <div id="active-user-list"></div>
    <div
      class="bg-secondary very-rounded p-2 my-2"
      style="overflow-y: scroll; height:400px;"
      id="message-log"
    ></div>
    <small id="is-typing-field" class="text-success"></small>
    <div class="input-group mb-3">
      <input
        type="text"
        class="form-control bg-light font-weight-bold text-dark"
        aria-label="Message Global Chat"
        id="message-field"
        autofocus
      />
      <div class="input-group-append">
        <button class="btn btn-success" type="button" id="send-message-button">
          <i class="fas fa-paper-plane"></i>
          Send
        </button>
      </div>
    </div>
  </div>
</div>
<audio id="notification-sound" hidden>
  <source src="/media/newMessage.mp3" type="audio/mpeg" />
</audio>
<audio id="connect-sound" hidden>
  <source src="/media/connected.mp3" type="audio/mpeg" />
</audio>
<audio id="disconnect-sound" hidden>
  <source src="/media/disconnected.mp3" type="audio/mpeg" />
</audio>
<div id="current-user-name" hidden>
  {{#if user.nickname}}
    {{user.nickname}}
  {{else}}
    {{user.displayName}}
  {{/if}}
</div>
<div id="current-user-id" hidden>
  {{user._id}}
</div>
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"
></script>
<script src="/javascripts/chat.js"></script>